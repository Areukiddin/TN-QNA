= render 'shared/errors', resource: @question
.form
  = form_with model: @question, local: false do |f|

    %p.form-field
      = f.label :title
      = f.text_field :title
    %p.form-field
      = f.label :body
      = f.text_area :body
    %p.form-field
      = f.label :files
      = f.file_field :files, multiple: true

    %p Links:
    %p
      = f.fields_for :links do |l|
        %p.form-field
          = l.label :name, 'Link name'
          = l.text_area :name
        %p.form-field
          = l.label :url
          = l.text_area :url

    = f.submit 'Ask'
    %br
    %br
    = link_to '<- Back', questions_path
