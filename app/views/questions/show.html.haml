%h2= @question.title
%h3= @question.body
- if user_signed_in? && current_user.author_of?(@question)
  %p.delete= link_to 'Delete', question_path(@question), method: :delete, data: { confirm: 'Are you sure to delete question?' }

%h4= "Answers:"
.answers
  = render @question.answers

.answer-errors
  = render 'shared/errors', resource: @answer

= form_with model: [@question, @answer], class: 'new-answer' ,local: false do |f|
  = f.label :body, 'Your answer'
  = f.text_area :body

  = f.submit 'Answer'
