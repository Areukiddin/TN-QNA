%div.question{id: @question.id}
  %h2= @question.title
  %h3= @question.body

  %h5 Attachments
  %div.files
    -if @question.files.attached?
      =render @question.files

  - if user_signed_in? && current_user.author_of?(@question)
    = form_with model: @question, url: add_attachment_file_path(@question), class: "attach", local: false do |f|
      = f.label :files
      = f.file_field :files, multiple: true

      = f.submit 'Attach'

    %div.buttons-row
      %p.delete= link_to 'Delete', question_path(@question), method: :delete
      %p.edit= link_to 'Edit', '#', class: 'edit-question link', data: { question_id: @question.id }

    = form_with model: @question, class: 'hidden', html: {id: "edit-question-#{@question.id}"}, local: false do |f|

      %p
        = f.label :title
        = f.text_field :title
      %p
        = f.label :body
        = f.text_area :body

      = f.submit 'Save'
